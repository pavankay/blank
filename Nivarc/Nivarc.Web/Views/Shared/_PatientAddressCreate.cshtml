            </div>
            <div class="control-group">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.Line2, new { @class = "control-label" })
                </div>
                <div class="controls">
                    @Html.EditorFor(model => model.Line2)
                    @Html.ValidationMessageFor(model => model.Line2, null, new { @class = "help-inline" })
                </div>
            </div>
            <div class="control-group">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.City, new { @class = "control-label" })
                </div>
                <div class="controls">
                    @Html.EditorFor(model => model.City)
                    @Html.ValidationMessageFor(model => model.City, null, new { @class = "help-inline" })
                </div>
            </div>
            <div class="control-group">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.State, new { @class = "control-label" })
                </div>
                <div class="controls">
                    @Html.EditorFor(model => model.State)
                    @Html.ValidationMessageFor(model => model.State, null, new { @class = "help-inline" })
                </div>
            </div>
            <div class="control-group">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.PostalCode, new { @class = "control-label" })
                </div>
                <div class="controls">
                    @Html.EditorFor(model => model.PostalCode)
