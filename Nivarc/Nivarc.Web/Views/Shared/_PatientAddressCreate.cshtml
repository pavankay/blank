                <div class="col-md-2">
                    @Html.LabelFor(model => model.AddressTypeId, "Address Type", new { @class = "control-label" })
                </div>
                <div class="controls">
                    @Html.DropDownList("AddressTypeId")
                    @Html.ValidationMessageFor(model => model.AddressTypeId, null, new { @class = "help-inline" })
                </div>
            </div>
        </fieldset>
