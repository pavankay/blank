                    @Html.LabelFor(model => model.Line1, new { @class = "control-label" })
                </div>
                <div class="controls">
                    @Html.EditorFor(model => model.Line1)
                    @Html.ValidationMessageFor(model => model.Line1, null, new { @class = "help-inline" })
